
<%- include('../partials/header') %>

<div class="auth-bg d-flex align-items-center justify-content-center vh-100">
  <div class="auth-card row shadow-lg rounded-4 overflow-hidden" style="max-width: 800px; width: 100%; background: #fff;">
    <div class="col-md-6 d-none d-md-flex flex-column justify-content-center auth-left p-5" style="background: linear-gradient(135deg, #e5e8fb 0%, #f5f6fa 100%);">
      <h2 class="mb-3" style="color: #4839eb; font-weight: 700;">TaskFlow</h2>
      <p class="fs-5 mb-4">Streamline Your Workflow.<br>Conquer Your Tasks.</p>
      <ul class="list-unstyled fs-6">
        <li>Manage projects</li>
        <li>Track progress</li>
        <li>Collaborate seamlessly</li>
      </ul>
      <div class="mt-auto">
        <img src="/public/images/task_illustration.png" alt="Task Visual" style="width: 120px;">
      </div>
    </div>
    <div class="col-md-6 col-12 p-5 auth-form">
      <h3 class="mb-4 text-center" style="font-weight:600;">Login to TaskFlow</h3>
      <% if (error) { %>
        <div class="alert alert-danger text-center"><%= error %></div>
      <% } %>
      <form method="POST" action="/auth/login">
        <div class="mb-3">
          <label for="email" class="form-label">Email or Username</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Your password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-2" style="background:#4839eb; border:none; font-weight:500;">Login</button>
      </form>
      <div class="mt-4 text-center">
        <a href="#" class="text-muted me-3">Forgot password?</a>
        <a href="/auth/signup" class="text-decoration-none" style="color:#4839eb;">Create account</a>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>