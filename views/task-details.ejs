<div class="container-fluid">
    <div class="page-header">
        <div>
            <a href="/tasks" class="btn btn-light mb-3"><i class="bi bi-arrow-left"></i> Back to Tasks</a>
            <h2 class="page-title">Task Details</h2>
        </div>
        <div class="d-flex gap-2">
            <a href="/tasks/<%= task.task_id %>/edit" class="btn btn-primary-glass">
                <i class="bi bi-pencil-fill me-2"></i>Edit Task
            </a>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Main Details -->
        <div class="col-lg-8">
            <div class="glass-panel p-4 mb-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h3 class="fw-bold mb-0 text-primary">
                        <%= task.title %>
                    </h3>
                    <span class="badge <%= task.status === 'completed' ? 'bg-success' : 'bg-warning' %> text-uppercase">
                        <%= task.status %>
                    </span>
                </div>

                <p class="text-muted mb-4" style="font-size: 1.1rem; line-height: 1.6;">
                    <%= task.description || 'No description provided.' %>
                </p>

                <div class="d-flex flex-wrap gap-4 mb-4 pb-4 border-bottom border-light-subtle">
                    <div class="d-flex align-items-center gap-2">
                        <div class="icon-box-sm bg-light rounded text-muted p-2"><i class="bi bi-calendar3"></i></div>
                        <div>
                            <div class="small text-muted fw-bold">Due Date</div>
                            <div>
                                <%= task.due_date ? new Date(task.due_date).toLocaleDateString() : 'N/A' %>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="icon-box-sm bg-light rounded text-muted p-2"><i class="bi bi-flag"></i></div>
                        <div>
                            <div class="small text-muted fw-bold">Priority</div>
                            <div class="text-capitalize">
                                <%= task.priority %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Synchronous Subtasks -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold m-0"><i class="bi bi-list-check me-2 text-primary"></i>Subtasks</h5>
                    </div>

                    <div class="d-flex flex-column gap-2 mb-3">
                        <% subtasks.forEach(subtask=> { %>
                            <div class="list-item-glass d-flex align-items-center justify-content-between p-2 px-3">
                                <div class="d-flex align-items-center gap-3">
                                    <!-- Sync Toggle Subtask -->
                                    <form action="/subtasks/<%= subtask.subtask_id %>/toggle" method="POST"
                                        style="margin:0;">
                                        <button type="submit" class="btn p-0 border-0 bg-transparent">
                                            <i
                                                class="bi <%= subtask.status === 'completed' ? 'bi-check-square-fill text-success' : 'bi-square text-muted' %>"></i>
                                        </button>
                                    </form>
                                    <span
                                        class="<%= subtask.status === 'completed' ? 'text-decoration-line-through text-muted' : '' %>">
                                        <%= subtask.title %>
                                    </span>
                                </div>

                                <div class="d-flex gap-2">
                                    <!-- Sync Delete Subtask -->
                                    <form action="/subtasks/<%= subtask.subtask_id %>/delete" method="POST"
                                        onsubmit="return confirm('Delete subtask?')" style="margin:0;">
                                        <button type="submit" class="btn btn-sm btn-link text-danger p-0"><i
                                                class="bi bi-x-lg"></i></button>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <!-- Add Subtask Form -->
                    <form action="/tasks/<%= task.task_id %>/subtasks/add" method="POST" class="d-flex gap-2">
                        <input type="text" name="title" class="form-control" placeholder="Add a new subtask..."
                            required>
                        <button type="submit" class="btn btn-sm btn-primary-glass">Add</button>
                    </form>
                </div>
            </div>

            <!-- Synchronous Comments -->
            <div class="glass-panel p-4">
                <h5 class="fw-bold m-0 mb-4"><i class="bi bi-chat-left-text me-2 text-info"></i>Comments</h5>

                <div class="d-flex flex-column gap-3 mb-4">
                    <% comments.forEach(comment=> { %>
                        <div class="p-3 bg-white border rounded-3">
                            <div class="d-flex justify-content-between">
                                <p class="mb-1">
                                    <%= comment.comment %>
                                </p>
                                <form action="/comments/<%= comment.comment_id %>/delete" method="POST"
                                    onsubmit="return confirm('Delete comment?')" style="margin:0;">
                                    <button type="submit" class="btn btn-sm p-0 text-danger"><i
                                            class="bi bi-trash"></i></button>
                                </form>
                            </div>
                            <small class="text-muted">
                                <%= comment.created_at ? new Date(comment.created_at).toLocaleString() : '' %>
                            </small>
                        </div>
                        <% }) %>
                </div>

                <!-- Add Comment Form -->
                <form action="/tasks/<%= task.task_id %>/comments/add" method="POST" class="d-flex flex-column gap-2">
                    <textarea name="comment" class="form-control" rows="2" placeholder="Write a comment..."
                        required></textarea>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-sm btn-primary-glass">Post Comment</button>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>