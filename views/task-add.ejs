<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card p-5 w-100" style="max-width: 600px;">
    <h2 class="text-center fw-bold mb-4">Create New Task</h2>

    <form action="/tasks/add" method="POST" novalidate>
      <div class="mb-4">
        <label for="title" class="form-label text-muted small text-uppercase fw-bold">Title</label>
        <input type="text" class="form-control" id="title" name="title" required placeholder="What needs to be done?"
          autofocus>
      </div>

      <div class="mb-4">
        <label for="description" class="form-label text-muted small text-uppercase fw-bold">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3"
          placeholder="Add some details..."></textarea>
      </div>

      <div class="row mb-4">
        <div class="col-6">
          <label for="due_date" class="form-label text-muted small text-uppercase fw-bold">Due Date</label>
          <input type="date" class="form-control" id="due_date" name="due_date">
        </div>
        <div class="col-6">
          <label for="priority" class="form-label text-muted small text-uppercase fw-bold">Priority</label>
          <select class="form-select" id="priority" name="priority">
            <option value="Low">Low</option>
            <option value="Medium" selected>Medium</option>
            <option value="High">High</option>
          </select>
        </div>
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary py-3 fs-5">Create Task</button>
        <a href="/tasks" class="btn btn-light text-muted py-2">Cancel</a>
      </div>
    </form>
  </div>
</div>